---
import { paquetesNacionales } from "../data/PaquetesNacionales";

interface Props {
  	lang: "es" | "en";
}

const { lang } = Astro.props;

const textos = {
  	es: {
    	titulo: "Paquetes Vacacionales en Perú",
    	descripcion: "Quedarás sorprendido con la cultura peruana. Conoce los mejores destinos turísticos y vive experiencias inolvidables en cada rincón del país.",
    	boton: "Ver paquetes",
  	},
  	en: {
    	titulo: "Vacation Packages in Peru",
    	descripcion: "You will be amazed by Peruvian culture. Discover the best tourist destinations and live unforgettable experiences in every corner of the country.",
    	boton: "View packages",
  	},
};
---
<section class="py-20 bg-gray-50">
  	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-12 text-center">
    	<h2 class="font-extrabold text-gray-900 mb-6 text-[clamp(1.6rem,3vw,2rem)]">
      		{textos[lang].titulo}
    	</h2>
    	<p class="text-gray-700 mb-12 leading-relaxed text-[clamp(0.9rem,1.6vw,1rem)] max-w-3xl mx-auto">
      		{textos[lang].descripcion}
    	</p>

    	<div class="grid gap-6 sm:gap-8 md:gap-10 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
      		{paquetesNacionales[lang].map((p: any) => (
        		<div class="relative bg-white rounded-lg shadow-lg p-6 flex flex-col justify-between hover:shadow-2xl transition-transform transform hover:scale-105">
          			{p.etiqueta && (
            			<span class="absolute top-4 left-4 bg-[#ffc834] text-[#19470c] text-[clamp(0.65rem,1.4vw,0.75rem)] font-bold px-3 py-1 rounded-full shadow-md uppercase tracking-wide">
              				{p.etiqueta}
            			</span>
          			)}
          			<div>
            			<img src={p.imagen} alt={p.titulo} class="w-full h-40 sm:h-48 object-cover rounded-md mb-5"/>
            			<p class="text-[#2d751b] font-medium uppercase tracking-wide text-[clamp(0.7rem,1.5vw,0.8rem)]">
              				{p.dias}
            			</p>
            			<h3 class="font-bold text-gray-800 mt-2 text-[clamp(1rem,2vw,1.2rem)]">
              				{p.titulo}
            			</h3>
            			<p class="text-gray-600 mt-4 leading-relaxed text-[clamp(0.85rem,1.5vw,0.95rem)]">
              				{p.descripcion}
            			</p>
          			</div>

          			<div class="mt-6">
            			<a href={p.url} class="inline-flex items-center justify-center bg-[#19470c] text-white py-2 px-4 rounded-md font-medium text-[clamp(0.85rem,1.5vw,0.95rem)] hover:bg-[#64a323] transition">
              				{textos[lang].boton}
            			</a>
          			</div>
        		</div>
      		))}
    	</div>
  	</div>
</section>