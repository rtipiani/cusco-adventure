---
type Lang = "es" | "en";

const { pathname } = Astro.url;
const currentLang = (pathname.startsWith("/en") ? "en" : "es") as Lang;

const footerTexts: Record<Lang, {
    aboutTitle: string;
    aboutDesc: string;
    contactTitle: string;
    email: string;
    phone: string;
    paymentTitle: string;
    addressTitle: string;
    address: string;
    followUs: string;
    scheduleTitle: string;
    schedule: string;
    postSale: string;
    terms: string;
    privacy: string;
    code: string;
    claims: string;
    rights: string;
    designedBy: string;
}> = {
  	es: {
    	aboutTitle: "Sobre Nosotros",
    	aboutDesc: `En Cusco Adventure Travel Perú nos especializamos en crear experiencias de viaje auténticas en el Perú. 
                Promovemos el turismo sostenible, apoyamos a las comunidades locales y cuidamos cada destino.`,
    	contactTitle: "Contáctenos",
    	email: "Correo",
    	phone: "Teléfono",
    	paymentTitle: "Medios de Pago",
    	addressTitle: "Dirección",
    	address: "Alameda Pachacuteq A-5, Las Malvinas\nCusco Adventure Travel Peru S.R.L.",
    	followUs: "Síguenos",
    	scheduleTitle: "Horario de Atención",
    	schedule: "Lunes a sábado, de 8:00 a.m. a 10:00 p.m.",
    	postSale: "Atención postventa: Disponible las 24 horas, los 7 días de la semana.",
    	terms: "Términos y Condiciones",
    	privacy: "Política de Privacidad",
    	code: "Código ESNNA",
    	claims: "Libro de Reclamaciones",
    	rights: "©2025 Cusco Adventure Travel Perú - Todos los derechos reservados. | RUC: 20610617973",
    	designedBy: "Diseñado por"
  	},
  	en: {
    	aboutTitle: "About Us",
    	aboutDesc: `At Cusco Adventure Travel Peru, we specialize in creating authentic travel experiences in Peru. 
                We promote sustainable tourism, support local communities, and take care of each destination.`,
    	contactTitle: "Contact Us",
    	email: "Email",
    	phone: "Phone",
    	paymentTitle: "Payment Methods",
    	addressTitle: "Address",
    	address: "Alameda Pachacuteq A-5, Las Malvinas\nCusco Adventure Travel Peru S.R.L.",
    	followUs: "Follow Us",
    	scheduleTitle: "Opening Hours",
    	schedule: "Monday to Saturday, from 8:00 a.m. to 10:00 p.m.",
    	postSale: "After-sales service: Available 24/7.",
    	terms: "Terms & Conditions",
    	privacy: "Privacy Policy",
    	code: "ESNNA Code",
    	claims: "Complaints Book",
    	rights: "©2025 Cusco Adventure Travel Peru - All rights reserved. | RUC: 20610617973",
    	designedBy: "Designed by"
  	}
};
---
<footer class="bg-[#19470c] text-gray-300 py-12 px-6 md:px-12">
	<div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-10 text-center md:text-left">
		<div>
			<h3 class="text-lg font-semibold text-gray-100 mb-3">{footerTexts[currentLang].aboutTitle}</h3>
			<p class="text-sm leading-relaxed text-gray-400">{footerTexts[currentLang].aboutDesc}</p>
		</div>

		<div>
			<h3 class="text-lg font-semibold text-gray-100 mb-3">{footerTexts[currentLang].contactTitle}</h3>

			<p class="text-sm">
				<span class="font-bold">{footerTexts[currentLang].email}:</span><br />
				<a href="mailto:info@cuscoadventuretravelperu.com" class="hover:text-amber-400 transition">
					info@cuscoadventuretravelperu.com
				</a><br />
				<a href="mailto:reservascatravelperu@gmail.com" class="hover:text-amber-400 transition">
					reservascatravelperu@gmail.com
				</a>
			</p>

			<p class="text-sm mt-1">
				<span class="font-bold">{footerTexts[currentLang].phone}:</span><br />
				<a href="tel:+51973291892" class="hover:text-amber-400 transition">(+51) 973 291 892</a><br />
				<a href="tel:+51987654321" class="hover:text-amber-400 transition">(+51) 914 397 155</a>
			</p>
		</div>

		<div>
			<h3 class="text-lg font-semibold text-gray-100 mb-3">{footerTexts[currentLang].paymentTitle}</h3>
			<div class="flex justify-center md:justify-start gap-6 text-3xl text-gray-200">
				<i class="fab fa-cc-visa"></i>
				<i class="fab fa-cc-mastercard"></i>
				<i class="fab fa-cc-paypal"></i>
				<i class="fab fa-cc-amex"></i>
			</div>

			<div class="mt-6 text-center md:text-left">
				<h3 class="text-lg font-semibold text-gray-100 mb-3">{footerTexts[currentLang].addressTitle}</h3>
				<p class="text-sm text-gray-400" set:html={footerTexts[currentLang].address.replace("\n", "<br />")}></p>
			</div>
		</div>

		<div>
			<h3 class="text-lg font-semibold text-gray-100 mb-3">{footerTexts[currentLang].followUs}</h3>
			<div class="flex justify-center md:justify-start gap-5">
				<a href="https://www.facebook.com/cuscoadventuretravelperu" target="_blank" aria-label="Facebook" class="hover:text-amber-400 transition"><i class="fab fa-facebook-f text-2xl"></i></a>
				<a href="https://www.instagram.com/cuscoadventuretravelperu/" target="_blank" aria-label="Instagram" class="hover:text-amber-400 transition"><i class="fab fa-instagram text-2xl"></i></a>
				<a href="https://www.youtube.com/@CuscoAdventureTravelPeru/shorts" target="_blank" aria-label="YouTube" class="hover:text-amber-400 transition"><i class="fab fa-youtube text-2xl"></i></a>
				<a href="https://www.tiktok.com/@cuscoadventuretravelperu" target="_blank" aria-label="TikTok" class="hover:text-amber-400 transition"><i class="fab fa-tiktok text-2xl"></i></a>
				<a href="https://www.tripadvisor.com/Attraction_Review-g294314-d26699947-Reviews-Cusco_Adventure_Travel_Peru-Cusco_Cusco_Region.html" target="_blank" aria-label="TripAdvisor" class="hover:text-amber-400 transition">
					<img src="/tripadvisor.png" alt="TripAdvisor" class="w-8 h-8" />
				</a>
			</div>

			<div class="mt-6 text-center md:text-left">
				<h3 class="text-lg font-semibold text-gray-100 mb-3">{footerTexts[currentLang].scheduleTitle}</h3>
				<p class="text-sm text-gray-400">{footerTexts[currentLang].schedule}</p>
				<p class="text-sm text-gray-400 mt-1">{footerTexts[currentLang].postSale}</p>
			</div>
		</div>
	</div>

	<div class="mt-7 border-t border-gray-700 pt-6 text-center text-xs text-gray-400">
  		<div class="mb-3 flex flex-wrap justify-center gap-4 text-gray-400">
  			<a href={currentLang === "es" ? "/es/terminos-y-condiciones" : "/en/terms-and-conditions"}   class="hover:text-amber-400 transition">
    			{footerTexts[currentLang].terms}
  			</a>
  			<span>|</span>
  			<a href={currentLang === "es" ? "/es/politicas-de-privacidad" : "/en/privacy-policy"} class="hover:text-amber-400 transition">
    			{footerTexts[currentLang].privacy}
  			</a>
  			<span>|</span>
  			<a href={currentLang === "es" ? "/es/codigo-esnna" : "/en/esnna-code"}   class="hover:text-amber-400 transition">
    			{footerTexts[currentLang].code}
  			</a>
  			<span>|</span>
  			<a href={currentLang === "es" ? "/es/libro-de-reclamaciones" : "/en/virtual-complaints-book"} class="hover:text-amber-400 transition">
    			{footerTexts[currentLang].claims}
  			</a>
		</div>
		<p>
			©2025 Cusco Adventure Travel Perú - Todos los derechos reservados. | RUC: 20610617973 <br />
			Diseñado por 
			<a href="http://facebook.com/rubenestebantipiania" target="_blank" rel="noopener noreferrer" class="text-gray-200 font-medium hover:underline">
				Rubén Tipiani
			</a>
		</p>
	</div>
</footer>